<div class="BoxWithShadow col-10 offset-1">

	<h2>Add a Hike</h2>
	<br />
	<%= simple_form_for @hike do |f| %>
		<%= f.input :name %>
		<%= f.input :date %>
		<%= f.input :description, as: :text %>
		<div class="float-right">
			<%= f.button :submit, class: 'btn btn-success' %>
		</div>
	<% end %>
	<br /><br class="clear" />
</div>